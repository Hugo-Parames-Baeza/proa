<h1 class="text-(--red) mt-[7vh] text-center text-2xl md:text-6xl font-bold">
  PROYECTO
</h1>
<div class="text-justify text-(--red) md:text-xl">
  <p class="mt-5">
    En este momento estamos trabajando en pro a un proyecto electoral que se
    ajuste a la realidad de Espa√±a y las necesidades actuales de quienes viven
    en ella.
  </p>
  <p class="mt-5">Vuelve en:</p>
  <p id="timer" class="mt-5 text-center text-xl font-bold md:text-4xl lg:text-6xl">
    
  </p>
</div>

<script>
    const segundo = 1000;
    const minuto = segundo * 60;
    const hora = minuto * 60;
    const dia = hora * 24;
    const temporizador = document.querySelector('#timer');
    const intervalo = setInterval(() => {
        const fechaActual = new Date();
        const fechaFin = new Date("2025/11/20 00:00:00");
        let diferencia = fechaFin.getTime() - fechaActual.getTime();

        if (diferencia <= 0) {
            clearInterval(intervalo);
            return;
        }

        const dias = Math.floor(diferencia / dia);
        diferencia %= dia;

        const horas = Math.floor(diferencia / hora);
        diferencia %= hora;

        const minutos = Math.floor(diferencia / minuto);
        diferencia %= minuto;

        const segundos = Math.floor(diferencia / segundo);

        temporizador!.textContent= `${dias}D - ${horas}H - ${minutos}M - ${segundos}S`;
    }, 1000);
</script>
