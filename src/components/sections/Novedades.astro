const novedades = [
  {
    titulo: "BLOG",
    position: "text-end",
    img: `url(${novedad.src})`,
    enlace:'blog'
  },
  {
    titulo: "PODCAST",
    position: "text-center",
    img: `url(${candidato.src})`,
    enlace:'#'
  },
];
