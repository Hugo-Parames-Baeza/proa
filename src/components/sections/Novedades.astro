  id="novedades"
  class="lg:h-[95vh] pb-3 text-(--red) px-2 pt-1 flex flex-col justify-center"
>
  <h2 class="font-extrabold text-center text-4xl lg:text-8xl mt-5">
    NOVEDADES
  </h2>
  <p class="text-xs text-center my-2 md:text-xl">
    Participa en los eventos que PROA prepara para ti
  </p>
  <div
    class="my-4 flex md:w-3/4 lg:w-1/2 md:mx-auto px-5 justify-center items-center gap-4 md:gap-8"
  >
    {
      novedades.map((e) => (
        <div
          id="bgk"
          class="flex-1 aspect-square bg-cover bg-center p-2 box-border flex flex-col justify-between items-start rounded-sm"
          style={"background-image: "+e.img}
        >
          <h3 class={"text-white w-full md:mt-2 lg:mt-3 font-bold md:text-2xl lg:text-4xl " + e.position}>
            {e.titulo}
          </h3>
          <a href={e.enlace} class="bg-white p-1 lg:p-2 rounded-lg text-xs font-bold mx-auto hover:bg-gray-200">
            Ver m√°s
